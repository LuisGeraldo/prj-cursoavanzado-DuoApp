<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgfondo"
    tools:context=".net.azurewebsites.acceso.RegistrarseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/text_app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="50sp"
            android:textColor="@color/colorBlanco"
            android:gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/edit_text_correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlanco"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            android:hint="@string/hint_email"
            android:textColorHint="@color/colorHint"
            android:background="@drawable/styleround"/>

        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlanco"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:hint="@string/hint_user_name"
            android:textColorHint="@color/colorHint"
            android:background="@drawable/styleround"/>


        <EditText
            android:id="@+id/edit_text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:password="true"
            android:hint="@string/hint_password"
            android:textColorHint="@color/colorHint"
            android:textColor="@color/colorBlanco"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/styleround"/>

        <Button
            android:id="@+id/btn_registrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_registrarse"
            android:layout_marginTop="40dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorBlanco"/>

        <Button
            android:id="@+id/btn_iniciar_sesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_iniciar_sesion"
            android:layout_marginTop="8dp"
            android:background="@color/colorBlanco" />

    </LinearLayout>
</ScrollView>